# .editorconfig

# 声明这是根配置文件（停止向上搜索）
root = true

# 所有文件的通用设置
[*]
charset = utf-8                  # 使用UTF-8编码
end_of_line = lf                 # 使用Linux风格换行符(LF)
indent_style = space             # 使用空格缩进
indent_size = 2                  # 缩进宽度为2个空格
insert_final_newline = true      # 文件末尾添加空行
trim_trailing_whitespace = true  # 删除行尾空格
max_line_length = 100            # 最大行长度(可选)

# JSON文件设置
[*.json]
indent_size = 2                  # JSON文件也使用2空格缩进

# Markdown文件特殊设置
[*.md]
trim_trailing_whitespace = false # 保留行尾空格（对MD有意义）
max_line_length = off            # 关闭行长限制

# Makefile必须使用tab
[Makefile]
indent_style = tab

# 测试文件特殊设置
[test/**]
indent_size = 4